<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddAnnouncements">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-70dp"
            app:srcCompat="@drawable/topback" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:onClick="Profile"

            >

<!--            <ImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/person"-->
<!--                android:layout_gravity="center"-->
<!--                app:tint="#D83597" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text=""
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/buttonback"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/stayland"
                android:gravity="center"
                android:text="@string/add_announcement"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#715CF8"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/add_border"
                android:fontFamily="@font/clustdemo"
                android:hint="@string/name_of_announcement"
                android:paddingStart="16dp" />

            <EditText
                android:id="@+id/Url"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/add_border"
                android:fontFamily="@font/clustdemo"
                android:hint="@string/url_of_the_announcement_image"
                android:paddingStart="16dp" />

            <EditText
                android:id="@+id/UrlD"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/add_border"
                android:fontFamily="@font/clustdemo"
                android:hint="@string/url_of_the_announcement_dimensions"
                android:paddingStart="16dp" />

            <EditText
                android:id="@+id/Price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/add_border"
                android:fontFamily="@font/clustdemo"
                android:hint="@string/price_of_announcement"
                android:paddingStart="16dp" />

            <EditText
                android:id="@+id/Type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/clustdemo"
                android:background="@drawable/add_border"
                android:hint="@string/type_of_announcement"
                android:paddingStart="16dp" />

            <EditText
                android:id="@+id/Composition"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/clustdemo"
                android:background="@drawable/add_border"
                android:hint="@string/composition_of_announcement"
                android:paddingStart="16dp" />

            <EditText
                android:id="@+id/Durability"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/add_border"
                android:fontFamily="@font/clustdemo"
                android:hint="@string/durability_of_announcement"
                android:paddingStart="16dp" />

            <EditText
                android:id="@+id/Color"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/add_border"
                android:hint="@string/color_of_announcement"
                android:fontFamily="@font/clustdemo"
                android:paddingStart="16dp" />

            <Button
                android:fontFamily="@font/poppinsblack"
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_border"
                android:text="@string/add_new_announcement" />

        </LinearLayout>

        <!-- التحت -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#1C1819"
            android:layout_above="@id/nav"
            android:layout_marginBottom="-3dp"
            android:layout_alignParentEnd="true" />
        <LinearLayout
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="64dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/profile"
                android:layout_marginStart="10dp"
                android:onClick="Profile"/>
<!--            <View-->
<!--                android:layout_width="2dp"-->
<!--                android:layout_height="70dp"-->
<!--                android:background="#1C1819"-->
<!--                />-->
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="64dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/cart"
                android:onClick="Cart"/>
<!--            <View-->
<!--                android:layout_width="2dp"-->
<!--                android:layout_height="70dp"-->
<!--                android:background="#1C1819"-->
<!--                />-->
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/addannouncements2" />
<!--            <View-->
<!--                android:layout_width="2dp"-->
<!--                android:layout_height="70dp"-->
<!--                android:background="#1C1819"-->
<!--                />-->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:onClick="announcements"
                app:srcCompat="@drawable/announcements" />
<!--            <View-->
<!--                android:layout_width="2dp"-->
<!--                android:layout_height="70dp"-->
<!--                android:background="#1C1819"-->
<!--                />-->
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/home"
                android:onClick="Home"
                />
        </LinearLayout>
    </RelativeLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:id="@+id/ProgressBar"
        />
</FrameLayout>