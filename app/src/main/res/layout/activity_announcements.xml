<!--                android:layout_height="70dp"-->
<!--                android:background="#1C1819" />-->

            <ImageView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:onClick="Home"
                app:srcCompat="@drawable/home" />
        </LinearLayout>
    </RelativeLayout>
